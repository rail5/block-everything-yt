{
  "manifest_version": 2,

  "name": "Block Everything YT",
  "version": "1.11",
  "author": "rail5",
  "homepage_url": "https://github.com/rail5/block-everything-yt",
  "description": "This addon blocks manipulative elements on YouTube",
  "icons": {
    "128": "bc.png"
  },
  "applications": {
    "gecko": {
      "id": "rails2@rail5.org",
      "strict_min_version": "52.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["src/block_comments_youtube.css"]
    }
  ]
}
